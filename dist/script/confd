#!/bin/bash

set -e

command=$1

OVSDB_SERVER_BIN="/usr/sbin/ovsdb-server"
[ "$OVSDB_DATABASE" == "" ] && OVSDB_DATABASE="/etc/openlan/switch/confd.db"
[ "$OVSDB_LOG_FILE" == "" ] && OVSDB_LOG_FILE="/var/log/openlan/confd.log"
[ "$OVSDB_SOCK" == "" ] && OVSDB_SOCK="/var/run/openlan/confd.sock"
[ "$OVSDB_PID_FILE" == "" ] && OVSDB_PID_FILE="/var/run/openlan/confd.pid"

function stop() {
    [ -e "$OVSDB_PID_FILE" ] && kill "$(cat $OVSDB_PID_FILE)"
}

function start() {
    mkdir -p /var/run/openlan
    mkdir -p /var/log/openlan
    set $OVSDB_SERVER_BIN $OVSDB_DATABASE
    set "$@" -vconsole:emer -vsyslog:err -vfile:info
    set "$@" --remote=punix:"$OVSDB_SOCK"
    set "$@" --log-file="$OVSDB_LOG_FILE"
    set "$@" --pidfile="$OVSDB_PID_FILE"
    [ "$OVSDB_OPTIONS" != "" ] && set "$@" $OVSDB_OPTIONS
    set "$@" --detach
    OVS_RUNDIR="/var/run/openlan" "$@"
}

case $command in
    start)
        start
        ;;
    stop)
        stop
        ;;
    restart)
        restart
        ;;
    *)
        echo >&2 "$0: unknown command \"$command\" (start/stop/restart)"
        exit 1
        ;;
esac
