Name: openlan-switch
Version: VERSION
Release: 1%{?dist}
Summary: OpenLAN's Project Software
Group: Applications/Communications
License: Apache 2.0
URL: https://github.com/danieldin95/openlan
Requires: net-tools, iptables, iputils, openvpn, openssl

%define _venv /opt/openlan-utils/env
%define _source_dir ${RPM_SOURCE_DIR}/openlan-%{version}

%description
OpenLAN's Project Software

%build
cd %_source_dir && make linux-switch

%install
mkdir -p %{buildroot}/usr/bin
cp %_source_dir/build/openlan %{buildroot}/usr/bin
cp %_source_dir/build/openlan-point %{buildroot}/usr/bin
cp %_source_dir/build/openlan-switch %{buildroot}/usr/bin
cp %_source_dir/build/openudp %{buildroot}/usr/bin

mkdir -p %{buildroot}/etc/openlan/switch
cp %_source_dir/dist/resource/ctrl.json.example %{buildroot}/etc/openlan/switch
cp %_source_dir/dist/resource/switch.json*.example %{buildroot}/etc/openlan/switch
cp %_source_dir/dist/resource/confd.schema.json %{buildroot}/etc/openlan/switch
mkdir -p %{buildroot}/etc/openlan/switch/acl
cp %_source_dir/dist/resource/acl-1.json.example %{buildroot}/etc/openlan/switch/acl
mkdir -p %{buildroot}/etc/openlan/switch/network
cp %_source_dir/dist/resource/network.json.example %{buildroot}/etc/openlan/switch/network
cp %_source_dir/dist/resource/default.json.example %{buildroot}/etc/openlan/switch/network
cp %_source_dir/dist/resource/esp.json.example %{buildroot}/etc/openlan/switch/network
cp %_source_dir/dist/resource/vxlan.json.example %{buildroot}/etc/openlan/switch/network
cp %_source_dir/dist/resource/fabric.json.example %{buildroot}/etc/openlan/switch/network
mkdir -p %{buildroot}/etc/sysconfig/openlan
cp %_source_dir/dist/resource/switch.cfg %{buildroot}/etc/sysconfig/openlan
mkdir -p %{buildroot}/etc/sysctl.d
cp %_source_dir/dist/resource/90-openlan.conf %{buildroot}/etc/sysctl.d

mkdir -p %{buildroot}/usr/lib/systemd/system
cp %_source_dir/dist/resource/openlan-confd.service %{buildroot}/usr/lib/systemd/system
cp %_source_dir/dist/resource/openlan-switch.service %{buildroot}/usr/lib/systemd/system

mkdir -p %{buildroot}/var/openlan
cp -R %_source_dir/dist/script %{buildroot}/var/openlan
cp -R %_source_dir/pkg/olsw/public %{buildroot}/var/openlan
mkdir -p %{buildroot}/var/openlan/cert
cp -R %_source_dir/build/cert/openlan/cert %{buildroot}/var/openlan
cp -R %_source_dir/build/cert/openlan/ca/ca.crt %{buildroot}/var/openlan/cert

mkdir -p %{buildroot}/var/openlan/openvpn
cp -R %_source_dir/dist/resource/openvpn.md %{buildroot}/var/openlan/openvpn
cp -R %_source_dir/dist/resource/example.ovpn %{buildroot}/var/openlan/openvpn

mkdir -p %{buildroot}/var/openlan/point
%pre


%post
[ -e "/etc/openlan/switch/switch.json" ] || {
    /usr/bin/cp -rvf /etc/openlan/switch/switch.json.example /etc/openlan/switch/switch.json
}
[ -e "/var/openlan/openvpn/dh.pem" ] || {
    /usr/bin/openssl dhparam -out /var/openlan/openvpn/dh.pem 2048
}
[ -e "/var/openlan/openvpn/ta.key" ] || {
    /usr/sbin/openvpn --genkey --secret /var/openlan/openvpn/ta.key
}
[ -e "/etc/openlan/switch/confd.db" ] || {
    ovsdb-tool create /etc/openlan/switch/confd.db /etc/openlan/switch/confd.schema.json
}
[ -e "/etc/sysctl.d/90-openlan.conf" ] && {
    sysctl -p /etc/sysctl.d/90-openlan.conf || :
}

%files
%defattr(-,root,root)
/etc/sysconfig/*
/etc/openlan/*
/etc/sysctl.d/*
/usr/bin/*
/usr/lib/systemd/system/*
/var/openlan/*

%clean
rm -rf %_env
